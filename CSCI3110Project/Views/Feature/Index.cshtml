@model IEnumerable<KMCSCI3110Project.Models.Feature>

@{
    ViewData["Title"] = "Manage Features";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Feature</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.Id</td>
                <td>@f.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@f.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@f.Id" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                                class="btn btn-sm btn-danger"
                                onclick="return confirm('Delete feature \" @f.Name\"?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
