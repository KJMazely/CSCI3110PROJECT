@using KMCSCI3110Project.Models.ViewModels

@model ReservationAdminViewModel
@{
    ViewData["Title"] = "Delete Reservation";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this reservation?</h4>
<dl class="row">
    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@Model.CustomerEmail</dd>
    <dt class="col-sm-2">Vehicle</dt>
    <dd class="col-sm-10">@Model.VehicleName</dd>
    <dt class="col-sm-2">From</dt>
    <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
    <dt class="col-sm-2">To</dt>
    <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
    <dt class="col-sm-2">Cost</dt>
    <dd class="col-sm-10">@Model.TotalCost.ToString("C")</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReservationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
